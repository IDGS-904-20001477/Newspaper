---
import moment from "moment";
moment.locale("es");

const { post } = Astro.props;
const { slug, featuredImage, title, excerpt, author, category } =
  post.attributes;
const url = import.meta.env.STRAPI_URL;

const authorImage = author.data.attributes.bioImage.data.attributes.url || null;
const postImage = featuredImage.data.attributes.url || null;
const categoryName = category["data"]["attributes"]["Name"].toLowerCase();
const urlPost = `/post/${categoryName}/${slug}`;
---

<div
  class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700"
>
  <a href={urlPost}>
    <img
      class="rounded-t-lg"
      src={postImage ? url + postImage : "https://via.placeholder.com/1080"}
      alt=""
    />
  </a>
  <div class="p-5">
    <a href={urlPost}>
      <div class="flex space-x-2 items-center overflow-hidden">
        <p class="font-medium text-xs text-gray-600 cursor-pointer">
          {author?.name}
        </p>
      </div>
      <h5
        class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white hover:text-blue-900 transition duration-300"
      >
        {post["attributes"]["title"]}
      </h5>
    </a>
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
      {moment(post["attributes"]["publishedAt"], "YYYYMMDD").fromNow()}
    </p>
    <img
      class="inline-block h-8 w-8 rounded-full ring-2 ring-white mx-3"
      src={authorImage ? url + authorImage : "https://via.placeholder.com/1080"}
      alt="author picture"
    />
    <a
      href={urlPost}
      class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-900 hover:bg-cyan-500 transition duration-300 rounded-lg focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
    >
      Leer m&aacute;s &nbsp;
      <i class="fa-solid fa-arrow-right pt-0 md:pt-1"></i>
    </a>
  </div>
</div>
