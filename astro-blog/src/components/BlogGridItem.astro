---
import moment from "moment";
moment.locale("es");

const { post } = Astro.props;
const { slug, featuredImage, title, excerpt, author, category } =
  post.attributes;
const url = import.meta.env.STRAPI_URL;

const authorImage = author.data.attributes.bioImage.data.attributes.url || null;
const postImage = featuredImage.data.attributes.url || null;
const categoryName = category["data"]["attributes"]["Name"].toLowerCase();
const urlPost = `/post/${categoryName}/${slug}`;
---
<div
  class="flex flex-col h-full max-w-full bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700"
>
  <a href={urlPost} class="flex-shrink-0">
    <img
      class="w-full h-48 object-cover rounded-t-lg"
      src={postImage ? url + postImage : "https://via.placeholder.com/1080"}
      alt=""
    />
  </a>
  <div class="flex flex-col justify-between flex-1 p-5">
    <div>
      <a
        href={urlPost}
        class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white hover:text-blue-900 transition duration-300"
      >
        {post["attributes"]["title"]}
      </a>
      <p class="font-medium text-xs text-gray-600 cursor-pointer">
        {author?.name}
      </p>
    </div>
    <div class="inline-flex items-center my-4 mt-8 mb-2">
      <div class="w-full">
        <img
          class="inline-block h-8 w-8 rounded-full ring-2 ring-white mx-3"
          src={authorImage
            ? url + authorImage
            : "https://via.placeholder.com/1080"}
          alt="author picture"
        />
        <a
          href={urlPost}
          class="px-3 py-3 mt-8 text-sm font-medium text-center text-white bg-blue-900 hover:bg-cyan-500 transition duration-300 rounded-lg focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
        >
          Leer m√°s &nbsp;
          <i class="fa-solid fa-arrow-right pt-0 md:pt-1"></i>
        </a>
      </div>
    </div>
  </div>
</div>
